# Database connection
# Use either DATABASE_URL or individual parameters
DATABASE_URL=postgresql://user:password@localhost:5432/onlycouples

# Alternative: Use individual connection parameters
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=onlycouples
# DB_USER=postgres
# DB_PASSWORD=your_password_here

# Groq API Key (required for LLM extraction)
GROQ_API_KEY=your_groq_api_key_here

# Celery configuration (OPTIONAL - disabled by default for cost efficiency)
# Set ENABLE_CELERY=true to use Celery for concurrent task processing
# If false, tasks run directly in FastAPI (suitable for low traffic)
ENABLE_CELERY=false

# Redis URL for message broker (only required if ENABLE_CELERY=true)
CELERY_BROKER_URL=redis://localhost:6379/0

# Redis URL for result backend (only required if ENABLE_CELERY=true)
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Production Redis (if using password-protected Redis):
# CELERY_BROKER_URL=redis://:your_redis_password@localhost:6379/0
# CELERY_RESULT_BACKEND=redis://:your_redis_password@localhost:6379/0

# Production Redis (if using managed Redis service):
# CELERY_BROKER_URL=redis://default:password@your-redis-host:6379
# CELERY_RESULT_BACKEND=redis://default:password@your-redis-host:6379

# FastAPI server port (optional)
PORT=8001

# Logging level (optional)
# LOG_LEVEL=INFO

